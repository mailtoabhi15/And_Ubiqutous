<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/round_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/date_view">

        <TextView
            android:text="Today's Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/wear_date_textView"
            android:textColor="@color/green"
            android:textAppearance="@style/TextAppearance.Wearable.Large"/>

    </LinearLayout>

    <View
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/date_view"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/wear_img_forecast"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_launcher"
            />


        <TextView
            android:id="@+id/wear_high_textview"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/green"
            android:textAppearance="@style/TextAppearance.Wearable.Large"
            android:text="20"/>

        <TextView
            android:id="@+id/wear_low_textview"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/green"
            android:textAppearance="@style/TextAppearance.Wearable.Large"
            android:text="10"/>

    </LinearLayout>

</RelativeLayout>